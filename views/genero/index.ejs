<body class="body">
<div class="container">
    <a href="/generos/novo" class="btn btn-primary">Novo Gênero</a>
    <br></br>
    <div class="card">
        <div class="card-header">Gêneros Cadastrados</div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <th class="col-10">Gênero</th>
                    <th class="col-2">Ações</th>
                </thead>
                <tbody>
                    <% generos.forEach(genero => { %>
                        <tr>
                            <td><%= genero.genero %></td>
                            <td>
                                <a href="/generos/<%= genero.id %>" class="btn btn-primary">Editar</a> 
                                <a href="/generos/delete/<%= genero.id %>" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

</body>
</html>